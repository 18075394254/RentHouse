<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:id="@+id/myinfo_itemtwo_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:text="头像"
        android:textColor="@color/tab_textColor"
        android:textSize="15sp"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/myinfo_itemtwo_tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="相关信息"
        android:textColor="@color/tab_textColor"
        android:textSize="15sp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/myinfo_itemtwo_iv_goback"
        />
    <ImageView
        android:id="@+id/myinfo_itemtwo_iv_goback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/gotome"

        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>