<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
                android:layout_marginTop="20dp"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >
    <TextView
        android:id="@+id/mypost_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="求租贴标题"
        android:textColor="@color/tab_textColor"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/mypost_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥2000"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:textColor="@color/red"
        />

</RelativeLayout>
    <TextView
        android:id="@+id/mypost_item_demand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="求租需求文字描述文字描述文字描述"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/smallbackground"
            android:layout_marginLeft="5dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/smallbackground"
            android:layout_marginLeft="5dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/smallbackground"
            android:layout_marginLeft="5dp"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11号线桃浦新村"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="距离当前位置15km"
            android:layout_alignParentRight="true"

            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="整租"
            android:background="@drawable/button_shape"
            android:textColor="@color/tab_textColorSelect"
            android:textSize="17sp"
            android:layout_below="@+id/text_position"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/text_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019-08-26 10:47"
            android:layout_alignParentRight="true"

            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="下架"
            android:background="@drawable/button_shape"
            android:textColor="@color/tab_textColorSelect"
            android:textSize="17sp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/text_position"
            android:layout_marginTop="5dp"
            />
    </RelativeLayout>

</LinearLayout>