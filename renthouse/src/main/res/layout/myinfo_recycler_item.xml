<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
        android:id="@+id/myinfo_item_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:text="头像"
        android:textColor="@color/tab_textColor"
        android:textSize="15sp"
       android:layout_centerVertical="true"
        />

    <ImageView
        android:id="@+id/myinfo_item_iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher_round"

        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/myinfo_item_iv_goback"
        />
    <ImageView
        android:id="@+id/myinfo_item_iv_goback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/gotome"
        android:layout_alignTop="@+id/myinfo_item_iv_icon"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"

        />

</RelativeLayout>