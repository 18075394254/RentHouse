<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/iv_imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/background"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/tv_1"
                        style="@style/MyCustomTabLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="整租-乐山二村"
                        android:textColor="@drawable/textselector"
                        android:textSize="15sp"
                        />


                    <TextView
                        android:id="@+id/tv_2"
                        style="@style/MyCustomTabLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingLeft="5dp"
                        android:text="一室一厅"
                        android:textColor="@drawable/textselector"
                        android:textSize="15sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="match_parent"
                        android:src="@mipmap/star"
                        />

                    <TextView
                        android:id="@+id/tv_3"
                        style="@style/MyCustomTabLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="5.0 |"
                        android:textColor="@drawable/textselector"
                        android:textSize="15sp"
                        />


                    <TextView
                        android:id="@+id/tv_4"
                        style="@style/MyCustomTabLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingLeft="5dp"
                        android:text="一室一厅 |"
                        android:textColor="@drawable/textselector"
                        android:textSize="15sp"
                        />

                    <TextView
                        android:id="@+id/tv_5"
                        style="@style/MyCustomTabLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingLeft="5dp"
                        android:text="职业房东"
                        android:textColor="@drawable/textselector"
                        android:textSize="15sp"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="地址：xxxxxxxxxxxxxxx"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/tv_7"
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="5dp"
                        android:background="@color/tab_textColorSelect"
                        android:gravity="center"
                        android:text="标签"
                        android:textColor="@color/tab_background"
                        />

                    <TextView
                        android:id="@+id/tv_8"
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="5dp"
                        android:background="@color/tab_textColorSelect"
                        android:gravity="center"
                        android:text="标签"
                        android:textColor="@color/tab_background"
                        />

                    <TextView
                        android:id="@+id/tv_9"
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="5dp"
                        android:background="@color/tab_textColorSelect"
                        android:gravity="center"
                        android:text="标签"
                        android:textColor="@color/tab_background"
                        />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/tv_10"
                        style="@style/MyCustomTabLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="3500元/月"
                        android:textColor="#FF0000"
                        android:textSize="15sp"
                        />

                    <TextView
                        android:id="@+id/tv_11"
                        style="@style/MyCustomTabLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:text="浏览量:1254"
                        android:textColor="@color/tab_textColor"
                        android:textSize="15sp"
                        />
                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="4"
            android:layout_marginBottom="20dp"

            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                >
                <Button
                    android:id="@+id/mypublish_share_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="分享"
                    android:background="@drawable/button_share"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                >
                <Button
                    android:id="@+id/mypublish_dismount_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"

                    android:layout_weight="1"
                    android:text="下架"
                    android:background="@drawable/button_dismount"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                >
                <Button
                    android:id="@+id/mypublish_flush_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"

                    android:layout_weight="1"
                    android:text="刷新"
                    android:background="@drawable/button_flush"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                >
                <Button
                    android:id="@+id/mypublish_generalization_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:text="推广"
                    android:background="@drawable/button_generalization"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
