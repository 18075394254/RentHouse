
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/rootView"
    >
    <TextView
        android:id="@+id/shouyeText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="首页"
        android:textSize="20sp"
        android:gravity="center"

        />

<ScrollView


    tools:context="fragment.ShouYeFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
             >


<LinearLayout
    android:id="@+id/searchLin"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:background="@color/tab_textColorSelect"
    android:layout_below="@+id/shouyeText"
    android:weightSum="9">
    <LinearLayout
        android:id="@+id/cityLin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >
        <TextView
            android:id="@+id/city_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上海"
            android:textSize="15sp"
            android:textColor="@color/White"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            />
        <ImageView
            android:id="@+id/cityName"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:src="@drawable/downarrow"
            android:layout_weight="0.80"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/searchRootView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="9.07"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        >
    <SearchView
        android:id="@+id/searchView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/searchviewshape"
        android:iconifiedByDefault="false"
        android:queryBackground="@null"
        android:queryHint="输入地址区域名字搜索"

        />
        </LinearLayout>

    <LinearLayout
        android:id="@+id/messageLin"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/message"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消息"
            android:textColor="@color/White"
            android:textSize="15sp"
            />

    </LinearLayout>
</LinearLayout>
    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"

        />

<android.support.v7.widget.RecyclerView
    android:id="@+id/gidRecyclerView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"

    />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/imageBackground"
        />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"
        android:layout_alignParentLeft="true"
        android:text="模块房源"
        android:textColor="#000000"
        />
    <TextView
        android:id="@+id/moreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:textSize="15sp"
        android:text="查看更多"
        />
</RelativeLayout>
    <android.support.v7.widget.RecyclerView
    android:id="@+id/twoRecyclerView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/imageBackground"
        />
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:text="特色推荐"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/threeRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/imageBackground"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:layout_alignParentLeft="true"
            android:text="阳光收费"
            android:textColor="#000000"
            />
        <TextView
            android:id="@+id/more2Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:textSize="15sp"
            android:text="查看更多"
            />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/fourRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/imageBackground"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:text="热门小区"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:src="@mipmap/ic_launcher_round"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/imageBackground"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:text="猜你喜欢"
        />
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/layout_swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="500dp">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/fiveRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        />
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>
</ScrollView>
</LinearLayout>