<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
             tools:context="fragment.ShouYeFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/shouyeText"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="首页"
            android:textSize="20sp"
            android:gravity="center"

            />
    </LinearLayout>

<LinearLayout
    android:id="@+id/searchLin"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:background="@color/tab_textColorSelect"
    android:layout_below="@+id/shouyeText"
    android:weightSum="9">
    <LinearLayout
        android:id="@+id/cityLin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        >
        <TextView
            android:id="@+id/city_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上海"
            android:textSize="15sp"
            android:textColor="@color/White"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            />
        <ImageView
            android:id="@+id/cityName"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:src="@drawable/downarrow"
            android:layout_weight="0.80"/>


    </LinearLayout>
    <SearchView
        android:id="@+id/searchView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@drawable/searchviewshape"
        android:iconifiedByDefault="false"
        android:layout_weight="9.07"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        />

    <LinearLayout
        android:id="@+id/messageLin"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"

        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/message"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消息"
            android:textColor="@color/White"
            android:textSize="15sp"
            />

    </LinearLayout>
</LinearLayout>
    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        />
    <GridView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"

        />
