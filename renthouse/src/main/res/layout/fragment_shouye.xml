
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/rootView"
    >
    <TextView
        android:id="@+id/shouye_Text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="首页"
        android:textColor="@color/White"
        android:textSize="20sp"
        android:gravity="center"
        android:background="@color/tab_textColorSelect"
        />

<utils.MyNestedScrollView

    android:id="@+id/shouye_nestedSV"
    tools:context="mainfragment.ShouYeFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
             >


<RelativeLayout
    android:id="@+id/shouye_searchLin"
    android:layout_width="match_parent"
    android:layout_height="50dp"

    android:background="@color/tab_textColorSelect"
    android:layout_below="@+id/shouye_Text"
    >
    <LinearLayout
        android:id="@+id/shouye_cityLin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_alignParentLeft="true"
        >
        <TextView
            android:id="@+id/shouye_city_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上海"
            android:textSize="15sp"
            android:textColor="@color/White"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            />
        <ImageView
            android:id="@+id/shouye_cityName"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:src="@drawable/downarrow"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/shouye_searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/searchviewshape"
        android:drawableLeft="@mipmap/leftgoback"
        android:hint="清输入区域地址后搜索"
        android:textSize="18sp"
        android:paddingBottom="8dp"
        android:layout_toRightOf="@+id/shouye_cityLin"
        android:layout_toLeftOf="@+id/shouye_messageLin"
        />

    <LinearLayout
        android:id="@+id/shouye_messageLin"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/message"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消息"
            android:textColor="@color/White"
            android:textSize="15sp"
            />

    </LinearLayout>


</RelativeLayout>
    <com.youth.banner.Banner
        android:id="@+id/shouye_banner"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"

        />

<android.support.v7.widget.RecyclerView
    android:id="@+id/shouye_gidRecyclerView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"

    />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/imageBackground"
        />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"
        android:layout_alignParentLeft="true"
        android:text="模块房源"
        android:textColor="#000000"
        />
    <TextView
        android:id="@+id/shouye_moreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:textSize="15sp"
        android:text="查看更多"
        />
</RelativeLayout>
    <android.support.v7.widget.RecyclerView
    android:id="@+id/shouye_twoRecyclerView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/imageBackground"
        />
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:text="特色推荐"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/shouye_threeRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/imageBackground"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:layout_alignParentLeft="true"
            android:text="阳光收费"
            android:textColor="#000000"
            />
        <TextView
            android:id="@+id/shouye_more2Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:textSize="15sp"
            android:text="查看更多"
            />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/shouye_fourRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/imageBackground"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:text="热门小区"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:src="@mipmap/card"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/imageBackground"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:text="猜你喜欢"
        />
    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/shouye_fiveRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"

        />


</LinearLayout>
</utils.MyNestedScrollView>
</LinearLayout>