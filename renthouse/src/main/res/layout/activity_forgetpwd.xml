<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >
    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tab_textColorSelect">

        <ImageView
            android:id="@+id/forget_iv_goback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/leftgoback"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:onClick="click"
            />
        <TextView

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="忘记密码"
            android:textColor="@color/White"
            android:textSize="20sp"
            android:gravity="center"

            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_centerInParent="true"
        android:id="@+id/relativeLayout">
        <ImageView
            android:id="@+id/forget_image_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/logo"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignWithParentIfMissing="false"
            />
        <LinearLayout
            android:id="@+id/linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:weightSum="4"
            android:layout_below="@+id/forget_image_log"
            >
            <EditText
                android:id="@+id/forget_edit_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:hint="请输入手机号"
                android:textColorHint="@color/gray"
                android:inputType="phone"

                />
            <TextView
                android:id="@+id/forget_text_validate"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:text="获取验证码"
                android:background="@drawable/button_fill_round"
                android:textColor="@color/white"
                android:gravity="center"
                android:onClick="click"
                />

        </LinearLayout>

        <EditText
            android:id="@+id/forget_edit_inputcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/linearlayout"
            android:hint="请输入验证码"
            android:textColorHint="@color/gray"
            android:inputType="number"
            />

        <EditText
            android:id="@+id/forget_edit_inputPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/forget_edit_inputcode"
            android:hint="请输入新密码"
            android:textColorHint="@color/gray"
            android:inputType="textPassword"
            />

        <EditText
            android:id="@+id/forget_edit_inputPwdagain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/forget_edit_inputPwd"
            android:hint="请再次输入新密码"
            android:textColorHint="@color/gray"
            android:inputType="textPassword"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="提交"
            android:id="@+id/btn_commit"
            android:onClick="click"
            android:background="@drawable/button_fill_round"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_below="@+id/forget_edit_inputPwdagain"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            />
    </RelativeLayout>



</RelativeLayout>
