<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/tab_textColorSelect"
        >
        <ImageView
            android:id="@+id/iv_goback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/leftgoback"
            android:layout_centerVertical="true"
            />
        <SearchView
            android:id="@+id/search_searchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/searchviewshape"
            android:iconifiedByDefault="false"
            android:queryBackground="@null"
            android:queryHint="输入地址区域名字搜索"
            android:layout_toRightOf="@+id/iv_goback"
            android:layout_toLeftOf="@+id/tv_search"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            />

        <TextView
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            />
    </RelativeLayout>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="热门搜索"
    android:textSize="18sp"
    android:textColor="@color/tab_textColor"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    />


</LinearLayout>